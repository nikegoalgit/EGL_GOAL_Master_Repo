// Verify the entered data
Function AF03-150()
   /* ------------------------------------------------------------*/
   /* Verify that required data is present.*/
   /* Verify any changed data.*/
   /* If any errors were found, exit to redisplay the map.*/
   /* ------------------------------------------------------------*/
   /* ------------------------*/
   /* Check for required data*/
   /* ------------------------*/
  ;
  if (AF03M001.XSECD == " "
   || AF03M001.AF03M-SESN-YR == 0
   /* OR AF03M001.AF03M-IN-STK-PCT EQ 0;*/
   || AF03M001.XSECD != XP1REC.XSECD
   || AF03M001.AF03M-SESN-YR != XP1REC.XP1XSNYY
   || AF03M001.AF03M-IN-STK-PCT != AF03W01.AF03W-IN-STK-PCT)
    ;
    AF03-151(); /* Edit required data*/
    ;
  end
  ;
   /* ------------------------*/
   /* Check if data changed*/
   /* ------------------------*/
  ;
  if (converseVar.validationMsgNum == 0) /* Required data has no errors*/
    ;
    if (AF03M001.XSUCD != XP1REC.XSUCD
     || AF03M001.XPCCD != XP1REC.XPCCD
     || AF03M001.XPLCD != XP1REC.XPLCD
     || AF03M001.XGACD != XP1REC.XGACD
     || AF03M001.XPRCD != XP1REC.XPRCD
     || AF03M001.AF03M-SESN-YR != XP1REC.XP1XSNYY
     || AF03M001.XSECD != XP1REC.XSECD
     || AF03M001.XXXUSER != XP1REC.XXXUSER)
      ;
      AF03-152(); /* Verify optional and/or changed data*/
      ;
    end
    ;
  end
  ;
  if (converseVar.validationMsgNum != 0) /* Errors found*/
    ;
    exit stack; /* Exit to redisplay map*/
    ;
  end
  ;
  ;
