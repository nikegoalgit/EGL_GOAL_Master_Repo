  end
  ;
  AF2REC.XSNYR = XP1REC.XP1XSNYR; /* XSE yr*/
  ;
  AF2REC.XSECD = XP1REC.XSECD; /* XSE cd*/
  ;
  if (XP1REC.XPRCD == " ") /* no product type entered*/
    AF2REC.XPRCD = "**"; /* Wild card product type*/
  else
    AF2REC.XPRCD = XP1REC.XPRCD; /* move selected product type*/
  end
  ;
  if (XP1REC.XGACD == " ") /* no ga entered*/
    AF2REC.XGACD = "**"; /* Wild card ga*/
  else
    AF2REC.XGACD = XP1REC.XGACD; /* gender/age*/
  end
  ;
  if (XP1REC.XPLCD == " ") /* no line entered*/
    AF2REC.XPLCD = "**"; /* Wild card line*/
  else
    AF2REC.XPLCD = XP1REC.XPLCD; /* product line*/
  end
